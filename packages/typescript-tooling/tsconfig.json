{
  "compilerOptions": {
    "target": "es5",

    // include latest EcmaScript library (for things like `Object.values`, etc.)
    "lib": ["es2018"],

    "sourceMap": true,

    "module": "commonjs",
    "moduleResolution": "node",

    // this allows you to import `../<package>/src` as `~/<package>`
    "baseUrl": "../packages",
    "paths": { "~/*": ["./*/src"] },

    // make sure the code is high-quality
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // allow imports like `import Moment from "moment"; Moment("<date>");`
    "esModuleInterop": true,

    // lets us use modules which have funky default exports
    "allowSyntheticDefaultImports": true,

    // lets us import JSON directly e.g. `import DATA from data.json`
    "resolveJsonModule": true,

    // don't check the types of our dependencies
    "skipLibCheck": true
  }
}
