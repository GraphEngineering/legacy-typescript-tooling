{
  "include": ["../../../../src/**/*"],
  "exclude": ["../../../../node_modules", "../../../../dist"],
  "compilerOptions": {
    "outDir": "../../../../dist",
    "baseUrl": "../../../../src",
    "paths": { "~/*": ["*"] },
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2018"]
  }
}
