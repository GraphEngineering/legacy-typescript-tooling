{
  "include": ["../../../../src/**/*"],
  "exclude": [
    "../../../../node_modules",
    "../../../../dist",
    "../../../../src/**/*.spec.*"
  ],
  "compilerOptions": {
    "outDir": "../../../../dist",
    "baseUrl": "../../../../src",
    "paths": { "~/*": ["*"] },
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018"]
  }
}
